{
    "ref": "fedora-atomic/27/${basearch}/pasific-host",
    "automatic_version_prefix": "27",
    "mutate-os-release": "27",

    "selinux": true,
    "initramfs-args": ["--no-hostonly"],

    "repos": ["fedora", "fedora-updates"],
    "documentation": false,
    "install-langs": [ "en_US" ],

    "etc-group-members": ["wheel", "docker"],
    "ignore-removed-users": ["root"],
    "ignore-removed-groups": ["root"],
    "check-passwd": { "type": "file", "filename": "passwd" },
    "check-groups": { "type": "file", "filename": "group" },

    "packages": [
        "atomic",
        "attr",
        "audit",
        "authconfig",
        "basesystem",
        "bash-completion",
        "bridge-utils",
        "bzip2",
        "chrony",
        "cri-o",
        "cryptsetup",
        "dnsmasq",
        "dracut-fips-aesni",
        "dracut-network",
        "e2fsprogs",
        "efibootmgr",
        "fedora-release-atomichost",
        "grub2-efi",
        "gzip",
        "initscripts",
        "iptables-services",
        "kernel",
        "less",
        "libreswan",
        "libsss_sudo",
        "NetworkManager",
        "nss-altfiles",
        "oci-register-machine",
        "oci-systemd-hook",
        "ostree-grub2",
        "openssh-clients",
        "openssh-server",
        "passwd",
        "policycoreutils-python",
        "policycoreutils-python-utils",
        "rootfiles",
        "rpm",
        "rpm-ostree",
        "selinux-policy-targeted",
        "shim",
        "sssd-client",
        "sudo",
        "tar",
        "tmux",
        "vim-enhanced"
    ],
    "default_target": "multi-user.target",
    "units": ["crio.service"],
    "postprocess-script": "treecompose-post.sh"
}
